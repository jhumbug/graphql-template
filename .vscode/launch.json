  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "address": "0.0.0.0",
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/usr/local/aswim/app",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "restart": true,
      "timeout": 10000,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
